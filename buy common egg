-- Script mua Egg + Gear t·ª± ƒë·ªông, cho ph√©p t√πy ch·ªânh list egg

repeat task.wait() until game:IsLoaded() and game.Players.LocalPlayer

-- Service
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- C·∫•u h√¨nh danh s√°ch tr·ª©ng v√† th·ªùi gian ch·ªù
local EggList = {
    "Common Egg",
	"Common Summer Egg",
    "Uncommon Egg",
    "Rare Egg",
    "Rare Summer Egg",
    "Legendary Egg",
    "Mythical Egg",
    "Bug Egg",
	"Sprout Egg",
	"Enchanted Egg",
	"Jungle Egg",
    "Fall Egg"
}

local EggDelay = 3       -- delay gi·ªØa c√°c l·∫ßn mua egg
local GearDelay = 60     -- delay gi·ªØa c√°c l·∫ßn mua gear
local GearName  = "Recall Wrench"

-- H√†m mua egg
local function buyEgg(eggName)
    local ok, err = pcall(function()
        local event = ReplicatedStorage:WaitForChild("GameEvents"):WaitForChild("BuyPetEgg")
        event:FireServer(eggName)
    end)
    if ok then
        print("ü•ö ƒê√£ mua:", eggName)
    else
        warn("‚ö†Ô∏è L·ªói khi mua", eggName, err)
    end
end

-- H√†m mua gear
local function buyGear(gearName)
    local ok, err = pcall(function()
        local event = ReplicatedStorage:WaitForChild("GameEvents"):WaitForChild("BuyGearStock")
        event:FireServer(gearName)
    end)
    if ok then
        print("üîß ƒê√£ mua gear:", gearName)
    else
        warn("‚ö†Ô∏è L·ªói khi mua gear", gearName, err)
    end
end

-- V√≤ng l·∫∑p ch√≠nh
while true do
    -- Mua to√†n b·ªô egg trong danh s√°ch
    for _, eggName in ipairs(EggList) do
        buyEgg(eggName)
        task.wait(EggDelay)
    end

    -- Mua gear
    buyGear(GearName)

    -- Ch·ªù cooldown ƒë·ªÉ mua l·∫°i
    task.wait(GearDelay)
end
